<script>
  const noBtn = document.getElementById("noBtn");
  const yesBtn = document.getElementById("yesBtn");
  const celebrateText = document.getElementById("celebrate");

  noBtn.addEventListener("mouseover", () => {
    // Move No button randomly
    noBtn.style.left = Math.random() * 200 - 100 + "px";
    noBtn.style.top = Math.random() * 100 - 50 + "px";
  });

  yesBtn.addEventListener("click", () => {
    celebrateText.style.display = "block";
    yesBtn.style.display = "none";
    noBtn.style.display = "none";

    // Heart confetti
    for (let i = 0; i < 80; i++) {
      const heart = document.createElement("div");
      heart.innerText = "â¤ï¸";
      heart.style.position = "absolute";
      heart.style.fontSize = (10 + Math.random() * 30) + "px";
      heart.style.left = Math.random() * window.innerWidth + "px";
      heart.style.top = Math.random() * window.innerHeight + "px";
      document.body.appendChild(heart);
    }
  });
</script>

